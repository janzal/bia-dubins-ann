#gui=cairo-nowin
#gui=none
gui=cairo
gui-aspect-ratio=1
gui-win-size-adjust=1
gui-win-width-preference=0
#gui-canvas-save-file=o.eps
gui-canvas-save-file=o.pdf
gui-background-color=white
nowait=0

logger-config=logger.cfg

output=results
result-canvas-output=dtp-3points
result-canvas-suffixes=pdf,png,canvas.txt

draw-shape-targets=pen_color:black;fill_color:green;pen_alpha:1;fill_alpha:1;width:1;radius:4;zoom:0;fill:1;outline:0;depth:15;
draw-shape-point=pen_color:black;fill_color:orange;pen_alpha:1;fill_alpha:1;width:1;radius:4;zoom:0;fill:1;outline:0;depth:15;
draw-shape-path=pen_color:red;fill_color:black;pen_alpha:1;fill_alpha:1;width:5;radius:0;zoom:0;fill:0;outline:1;depth:41;
draw-shape-lb=pen_color:green;fill_color:black;pen_alpha:1;fill_alpha:1;width:1;radius:0;zoom:0;fill:0;outline:1;depth:40;

canvas-border=2

simple-txt-demo=0
